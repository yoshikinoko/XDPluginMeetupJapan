{
  "name": "red_square",
  "version": "0.0.1",
  "description": "This is Red square, an Adobe XD Plugin.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug:install": "npm run deploy",
    "debug:watch": "nodemon -w src -w assets -w webpack.config.js -e js,jsx,css,scss,htm,html,json,png,jpg,jpeg -x npm run deploy",
    "start": "npm run debug:watch",
    "clean": "rimraf build/*",
    "build": "npm run clean && webpack --mode development && npm run validate",
    "deploy": "npm run build && xdpm install -o build",
    "package": "npm run build && xdpm package build",
    "precommit": "lint-staged",
    "validate": "xdpm validate build"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "xdpm": "git+https://github.com/yoshikinoko/xdpm#feature",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.1.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "webpack.config.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{css}": [
      "stylelint --fix",
      "git add"
    ],
    "**/*.json": [
      "prettier --write",
      "git add"
    ],
    ".eslintrc": [
      "prettier --write",
      "git add"
    ]
  }
}
